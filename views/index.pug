doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css",rel="stylesheet", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
    link(rel="stylesheet", href="../styles/index.css")
    title Welcome Page
  body
    h1 Welcome User
      
    form#login-form(action="/login", method="post")
      .mb-3
        label(for='username', class='form-label') Username
        input(type='text', class='form-control', name='username', id='username')
      .mb-3
        label(for='password', class='form-label') Password
        input(type='password', class='form-control', name='password', id='password')
      
      button(type='submit', class='btn btn-primary') Submit


    form#signup-form(action="/signup", method="post", style="display:none;")
      label(for="newUsername") New Username:
      input(type="text", id="newUsername", name="username", required)

      label(for='email') Email
      input(type='email', id='email', name='email',required)

      label(for="newPassword") New Password:
      input(type="password", id="newPassword", name="password", pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[$@$!%*?&])([A-Za-z\\d$@$!%*?&]|[^ ]){8,20}$", required)
      
      input(type="submit", value="Sign Up")

    br
    br
    a(href='#', id='signup-link') Don't have an account? Create one!
    br
    a(href='#', id='retrieve-pw') Forgot your password ? retrieve it here !
    br 
    form(action ='/retrievepw', id ='retrieve-pw-form', method='POST', style="display:none;")
      label(for='input-retrieve-pw') Email :
      input(type='email', id='input-retrieve-pw', name='email')
      input(type='submit', value='Send')
    br
    a(href='/auth/github') Login with GitHub
    br
    a(href='/auth/google') Login with Google
    button#back-button(style='display:none') Back
    script(src='../client/start.js')

     
